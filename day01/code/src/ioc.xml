<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!--记录
        id是对应的唯一的标识，也可以理解是实例类
        class：是对应的路径上的类

        使用property 进行对象的属性操作
        name：是对应com.joy.spring.demo.Person 对象的属性操作
        value:是对应的属性数值
    -->
    <bean id="person" class="com.joy.spring.demo.Person">
        <property name="id" value="1"></property>
        <property name="name" value="lisan"></property>
        <property name="age" value="20"></property>
        <property name="sex" value="1"></property>
    </bean>
</beans>